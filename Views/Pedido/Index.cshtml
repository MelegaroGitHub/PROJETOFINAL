@model Hamburgueria_Tarde.ViewModels.PedidoViewModel
<header>
    @{
        Html.RenderPartial("_HeaderNavBar");
    }
</header>

<main>
    <h2>Cadastro de Planos @Model.Cliente.Nome</h2>
    <form method="POST" action="Pedido/RegistrarPedido">
        <div>
            <label for="nome">Nome Completo</label>
            <br />
            <input id="nome" type="text" maxlength="20" minlength="3" name="nome" value="@Model.Cliente.Nome"/>
        </div>

        <div>
            <label for="endereco">Endere√ßo</label>
            <br />
            <input id="endereco" type="text" maxlength="20" minlength="3" name="endereco" value="@Model.Cliente.Endereco"/>
        </div>

        <div>
            <label for="telefone">Telefone para contato</label>
            <br />
            <input id="telefone" type="text" name="telefone" value="@Model.Cliente.Telefone"/>
        </div>

        <div>
            <label for="email">E-mail</label>
            <br />
            <input id="email" type="email" name="email" value="@Model.Cliente.Email"/>
        </div>

        <div class="double-field">
            <div>
                <label for="planos">Planos</label>
                <select id="planos" name="planos">
                    <option value="" disabled selected>Selecione</option>
                    @foreach(var h in Model.Planos)
                    {
                        <option value=@h.Nome>@h.Nome</option>
                    }
                </select>
            </div>
        </div>
        <input type="submit" value="Finalizar pedido!" />
    </form>''
</main>